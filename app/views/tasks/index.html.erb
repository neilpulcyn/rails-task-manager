<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task|%>
    <li>
    <%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task.id), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } do %>
      <i class="fa fa-trash-o"></i>
    <% end %>
      <% if task.completed%>
       <i class="fas fa-check-square-o"></i>
       <%else%>
        <i class="fas fa-square-o"></i>
      <%end%>
    </li>
  <% end %>
  <%= link_to "New Task", new_task_path%>
</ul>
